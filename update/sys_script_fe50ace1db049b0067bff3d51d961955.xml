        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var niUtils = new NeedItUtils();
   	var isToday = niUtils.isDateToday(current.u_when_needed);
	
	if(isToday == true){
		// If the When needed date is same date as isToday, do not write the record to the DB
		// Output an error message to the screen
		gs.addErrorMessage("NeedIt requests cannot be made for the same day.  Your request has not been saved to the database");
		current.setAbortAction(true);
	}else{
		// Only check the value if isToday is false
		var isPast = niUtils.isDatePast(current.u_when_needed);
		// If the When needed date isPast do not write the record to the DB
		// Output an error message to the screen
		if(isPast == true){
			gs.addErrorMessage("When needed date cannot be in the past.  Your request has not been saved to the database.");
			current.setAbortAction(true);
		}
	}

})(current, previous);]]></script>
